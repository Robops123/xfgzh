page {
  background-color: #f2f2f2;
}
.list {
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  -webkit-user-select: none;
          user-select: none;
  position: relative;
  touch-callout: none;
  margin: 20rpx;
  padding: 20rpx;
}
.list .title > text {
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .status {
  position: absolute;
  right: 15rpx;
  top: 0;
  width: 90rpx;
  height: 90rpx;
}
.brief {
  padding-top: 0 !important;
}
.brief > view {
  display: inline-block;
  vertical-align: top;
}
.brief2 > view {
  width: 580rpx;
}
.brief image {
  width: 60rpx !important;
  height: 60rpx !important;
  margin-right: 20rpx;
}
.brief .address {
  font-size: 32rpx;
}
.brief .type-name {
  display: inline-block;
  width: 160rpx;
  text-align: right;
}
.operate {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  padding: 20rpx 0 0;
  border-top: 1px solid #f2f2f2;
}
.operate > view {
  padding: 0 40rpx;
  border-radius: 40rpx;
  border: 1px solid #0092fe;
}
#liquidFill {
  width: 200rpx;
  height: 200rpx;
}
.my-tabs {
  background-color: #ffffff;
  height: 88rpx;
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  box-sizing: border-box;
  /* border-top: 2upx solid #dddddd; */
  /* border-bottom: 2upx solid #dddddd; */
  /* min-width: 100%; */
  width: 80%;
  margin: 20rpx auto;
  border-radius: 90rpx;
  overflow-x: auto;
}
.my-tabs .tab-item {
    box-sizing: border-box;
    width: 33%;
    line-height: 48rpx;
    padding: 20rpx 0;
    min-width: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.my-tabs .tab-item.active {
    position: relative;
    background-color: #2a95f0;
    color: #fff;
}
.my-tabs .tab-item.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
    width: 100%;
    border-bottom: 4rpx solid #3682FF;
    /* animation: test ease 1 1.5s; */
}
.my-tabs.space-between {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.status-word {
  position: absolute;
  right: 0;
  top: 20rpx;
  padding: 0 5rpx 0 20rpx;
  border-radius: 40rpx 0 0 40rpx;
  color: #fff;
}
.describe {
  margin-top: 20rpx;
  height: 58rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.progress {
  background-color: #54b7e4;
}
.finish {
  background-color: #847d7a;
}
.problem {
  background-color: #e74c13;
}
.warn {
  color: #EA7A19;
}
.my-device {
  display: inline-block;
  background-color: #fff;
  width: 46%;
  margin: 20rpx 1% 0 2%;
  border-radius: 8px;
}
.device-top {
  padding: 15rpx 0;
  border-bottom: 1px solid #333;
}
.device-main {
  padding: 20rpx;
  box-sizing: border-box;
}
.device-main-left {
  width: 45%;
}
.device-main-right {
  width: 55%;
}
.device-main-right {
  line-height: 1.5;
}
.device-main-left,
.device-main-right {
  display: inline-block;
  vertical-align: middle;
}
.device-main-left image {
  width: 60rpx;
  height: 60rpx;
}
.device-container {
  padding-bottom: 30rpx;
}
.device-bottom {
  color: #2794F0;
  text-align: center;
  padding: 15rpx 0;
  border-top: 1px solid #333;
  font-size: 30rpx;
}
.status.online {
  border: 1px solid #6BBD8F !important;
  color: #6BBD8F !important;
}
.status.offline {
  border: 1px solid #999999;
  color: #999999;
  margin-left: 20rpx;
}

