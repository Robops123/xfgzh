}
.list > view > view .info {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.list > view:not(:first-child) {
    margin-top: 1px;
}
.list > view:not(:first-child)::after {
      content: '';
      display: block;
      height: 0;
      border-top: #CCC solid 1px;
      width: 620rpx;
      position: absolute;
      top: -1px;
      right: 0;
      -webkit-transform: scaleY(0.5);
              transform: scaleY(0.5);
