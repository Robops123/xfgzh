/* 列表 */
.list {
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  -webkit-user-select: none;
          user-select: none;
  touch-callout: none;
}
.list .more {
    float: right;
    /* font-size: 1rem; */
}
.list > view {
    padding: 24rpx 30rpx;
    position: relative;
}
.list > view:active, .list > view.active {
      background-color: #f3f3f3;
}
.list > view image {
      height: 80rpx;
      width: 80rpx;
      border-radius: 4px;
      margin-right: 20rpx;
}
.list > view > view {
      line-height: 40rpx;
}
.list > view > view .time,
      .list > view > view .info {
        color: #999;
        font-size: 24rpx;
}
.list > view > view .time {
        /* width: 150upx; */
