
page{
	background-color: #f2f2f2;
}
.list{
	position: relative;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 20rpx 30rpx;
	margin:  20rpx;
	background: #fff;
	position: relative;
}
.list .title{
	max-width: 80%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.list .status{
	position: absolute;
	right: 15rpx;
	top: 0;
	width: 90rpx;
	height: 90rpx;
}
.brief{
	padding-top: 0 !important;
}
.brief>view{
	display: inline-block;
	vertical-align: top;
}
.brief image{
	width: 60rpx !important;
	height: 60rpx !important;
}
.brief .address{
	font-size: 32rpx;
}
.operate{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: space-evenly;
	-webkit-justify-content: space-evenly;
	        justify-content: space-evenly;
	padding: 20rpx 0;
	border-top: 1px solid #f2f2f2;
}
.list .describe{
	max-width: 90%;
	margin: 10rpx 0;
}

