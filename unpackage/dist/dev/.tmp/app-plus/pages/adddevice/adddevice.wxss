page {
  background: #f0f0f0;
}
.yt-list {
  margin-top: 16rpx;
  background: #fff;
}
.yt-list-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  line-height: 70rpx;
  position: relative;
}
.yt-list-cell.cell-hover {
    background: #fafafa;
}
.yt-list-cell.b-b:after {
    left: 30rpx;
}
.yt-list-cell .cell-icon {
    height: 32rpx;
    width: 32rpx;
    font-size: 22rpx;
    color: #fff;
    text-align: center;
    line-height: 32rpx;
    background: #f85e52;
    border-radius: 4rpx;
    margin-right: 12rpx;
}
.yt-list-cell .cell-icon.hb {
      background: #ffaa0e;
}
.yt-list-cell .cell-icon.lpk {
      background: #3ab54a;
}
.yt-list-cell .cell-tit {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 26rpx;
    color: dimgray;
    margin-right: 10rpx;
}
.yt-list-cell .cell-tip {
    font-size: 26rpx;
    color: #f85e52;
}
.yt-list-cell .cell-tip.disabled {
      color: #f85e52;
}
.yt-list-cell .cell-tip.active {
      color: #f85e52;
}
.yt-list-cell .cell-tip.red {
      color: #f85e52;
}
.yt-list-cell.desc-cell .cell-tit {
    max-width: 160rpx;
}
.yt-list-cell .desc {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 28rpx;
    color: darkgray;
}
.yt-list-cell switch {
    -webkit-transform: translateX(16rpx) scale(0.84);
            transform: translateX(16rpx) scale(0.84);
}
.add-btn {
  background: #3f87ff !important;
  border-radius: 34px !important;
  font-size: 34rpx;
  margin-top: 40rpx;
  color: #fff;
  width: 80%;
}
.card {
  padding: 20rpx 20rpx 0;
  background-color: #fff;
  margin: 30rpx;
  border-radius: 8px;
}
.card .line {
  padding: 20rpx 0;
}
.card .border-line {
  border-bottom: 1px solid #f2f2f2;
}
.line > text {
  display: inline-block;
  vertical-align: middle;
  width: 30%;
  text-align: right;
}
.line > input,
.line > .input {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  width: 64%;
  margin-left: 5%;
}
.uni-input-placeholder,
textarea {
  font-size: 28rpx;
}
.map-warpper {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}

